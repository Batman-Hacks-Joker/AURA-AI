
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for admin user profiles
    match /admins/{adminId} {
      allow read, update: if isSignedIn() && isOwner(adminId);
      allow create: if isSignedIn() && isOwner(adminId);
      allow delete: if false; // Generally, don't allow users to delete their own profiles
    }

    // Rules for customer user profiles (assuming a 'customers' collection)
    match /customers/{customerId} {
      allow read, update: if isSignedIn() && isOwner(customerId);
      allow create: if isSignedIn() && isOwner(customerId); // FIX: Removed check for 'request.resource.data.id'
      allow delete: if false;
    }

    // Rules for an admin's private product inventory
    match /users/{adminId}/products_inventory/{productId} {
      allow read, list, create, update, delete: if isSignedIn() && isOwner(adminId);
    }

    // Rules for products launched to the public marketplace
    match /products_launched/{productId} {
      allow get, list: if true; // Anyone can view launched products
      allow create: if isSignedIn() && request.resource.data.adminId == request.auth.uid && request.resource.data.isLaunched == true;
      allow update, delete: if isSignedIn() && resource.data.adminId == request.auth.uid;
    }

    // Rules for AI agents
    match /agents/{agentId} {
      allow get, list: if isSignedIn();
      // Only admins can create agents. We'd need a way to check for admin role.
      // Using a placeholder for now. In a real app, use custom claims.
      allow create: if isSignedIn(); 
      allow update, delete: if false; // Agents are immutable once created
    }
  }
}

    